<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heshen.mapper.RoomMapper">

    <!--<resultMap id="Guestroom" type="com.heshen.entity.Room">
        <result column="floor" property="floor"/>
        <result column="number" property="number"/>
        <result column="area" property="area"/>
        <result column="type" property="type"/>
        <result column="people" property="people"/>
        <result column="state" property="state"/>
        <result column="price" property="price"/>
        <result column="memo" property="memo"/>
    </resultMap>-->
    <select id="getRoom" parameterType="com.heshen.entity.Room" resultType="Room">
        select * from room
        <where>
            <if test="number!=null and number!=''">
                and number=#{number}
            </if>
            <if test="state!=null and state!=''">
                and state=#{state}
            </if>
        </where>
    </select>
    <select id="getRoomType" parameterType="com.heshen.entity.Room" resultType="com.heshen.entity.RoomType">
    SELECT DISTINCT TYPE,AREA,people,COUNT(TYPE) num,price,memo FROM room GROUP BY TYPE
</select>
</mapper>